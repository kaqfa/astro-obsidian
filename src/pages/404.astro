---
import MainLayout from "../layouts/MainLayout.astro";

// Generic 404 page - no path information exposed
const title = "404 - Not Found";
---

<MainLayout title={title}>
  <div class="flex items-center justify-center min-h-screen">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-text-primary mb-4">404</h1>
      <p class="text-xl text-text-muted mb-8">
        The page you're looking for doesn't exist.
      </p>
      <a
        href="/"
        class="inline-block px-6 py-3 bg-accent hover:bg-accent-hover text-white font-semibold rounded-lg transition-all"
      >
        Go Home
      </a>
    </div>
  </div>
</MainLayout>
